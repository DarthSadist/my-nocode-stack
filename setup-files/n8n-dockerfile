FROM n8nio/n8n:latest

# Установка системных зависимостей для Puppeteer (нужны для whatsapp-web.js)
RUN apt-get update && apt-get install -y \
    gconf-service \
    libasound2 \
    libatk1.0-0 \
    libc6 \
    libcairo2 \
    libcups2 \
    libdbus-1-3 \
    libexpat1 \
    libfontconfig1 \
    libgconf-2-4 \
    libgdk-pixbuf2.0-0 \
    libglib2.0-0 \
    libgtk-3-0 \
    libnspr4 \
    libpango-1.0-0 \
    libpangocairo-1.0-0 \
    libstdc++6 \
    libx11-6 \
    libx11-xcb1 \
    libxcb1 \
    libxcomposite1 \
    libxcursor1 \
    libxdamage1 \
    libxext6 \
    libxfixes3 \
    libxi6 \
    libxrandr2 \
    libxrender1 \
    libxss1 \
    libxtst6 \
    ca-certificates \
    fonts-liberation \
    libnss3 \
    lsb-release \
    xdg-utils \
    wget

# Установка дополнительных JavaScript библиотек
RUN cd /usr/local/lib/node_modules/n8n && \
    npm install --no-save \
    lodash \
    moment \
    date-fns \
    axios \
    natural \
    string-similarity \
    ml-distance \
    cheerio \
    csv-parser \
    json2csv \
    crypto-js \
    jsonwebtoken \
    @pinecone-database/pinecone \
    whatsapp-web.js \
    openai \
    langchain \
    sharp \
    pdf-parse \
    xlsx \
    winston \
    @faker-js/faker \
    fast-xml-parser \
    tesseract.js \
    uuid \
    validator
